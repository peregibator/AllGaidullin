<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RegularText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.H4" parent="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.H4.Regular" parent="RegularText">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.H6" parent="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.Subtitle1" parent="RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.Subtitle1.Medium" parent="BoldText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.Subtitle2.Medium" parent="BoldText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.Subtitle2" parent="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextView.Caption" parent="RegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="TextView.Caption.Black.Medium" parent="BoldText">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="TextView.Button" parent="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Button.Medium" parent="BoldText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.OverLine" parent="RegularText">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>